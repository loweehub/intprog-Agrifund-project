<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--  registerStyle -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/textborder</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
<!--  loginStyle  -->
    <style name="AppNameTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#008000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="LoginTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#008000</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/textborder</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ForgotPasswordTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:backgroundTint">#B1D2C8</item>
        <item name="android:textColor">#008000</item>
    </style>
    <!-- styles.xml -->
    <style name="DashboardNameTextStyle">
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#008000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ButtonStyle1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#008000</item>
<!--        <item name="android:backgroundTint">#B1D2C8</item>-->
    </style>
</resources>